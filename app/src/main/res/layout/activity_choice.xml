<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoiceActivity">

    <Button
        android:id="@+id/ch_bt0"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="불법주정차 신고"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/ch_bt1"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:text="불법주정차      전화번호 얻기"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ch_bt2"
        app:layout_constraintEnd_toEndOf="@+id/ch_bt0"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ch_bt0"
        app:layout_constraintTop_toBottomOf="@+id/ch_bt0" />

    <Button
        android:id="@+id/ch_bt2"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginBottom="121dp"
        android:text="주차장 상태"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ch_bt1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ch_bt1" />
</androidx.constraintlayout.widget.ConstraintLayout>